@model Project_Group3.Models.Instructor
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="~/fonts/boxicons.css" />

<div class="container-fluid mt-2 mb-3 p-0">
    <div class="card mb-4 bg-theme">
        <div class="card-body d-flex" style="justify-content: space-between;">
            <div class="d-flex align-items-start align-items-sm-center gap-4 ml-5">
                <div class="avatar-user mr-2 mt-5">
                    @* @if(@Model.Picture.Length != 0){
                        <img class="avatar-initial rounded-circle bg-label-warning" src="@Url.Content(@Model.Picture)">
                    }else{
                    } *@
                        <img class="avatar-initial rounded-circle bg-label-warning" src="~/img/1.png">
                </div>
                <div class="id-text form-group ml-2">
                    <label asp-for="InstructorId" class="text-theme font-weight-bold"></label>
                    <input value="@Model.InstructorId" class="form-control" style="width: 80%;" disabled/>
                </div>
                <div class="btn-next mt-5 d-flex" >
                    <form method="post" action="/Instructor/Previous">
                        <input type="hidden" name="InstructorId" value="@Model.InstructorId" />
                        <button type="submit" class="btn btn-primary text-white"><i class='bx bx-left-arrow-alt'></i></button>
                    </form>
                    <form class="ml-3" method="post" action="/Instructor/Next">
                        <input type="hidden" name="InstructorId" value="@Model.InstructorId" />
                        <button type="submit" class="btn btn-primary text-white"><i class='bx bx-right-arrow-alt'></i></button>
                    </form> 
                </div>
            </div>
        </div>
        <form asp-action="Edit" method="post" class="mb-5">
            <div class="container-fluid ml-5">
                <div class="row">
                    <div class="mb-3 col-md-6">
                        <div class="form-group">
                            <label asp-for="FirstName" class="text-theme font-weight-bold"></label>
                            <input value="@Model.FirstName" class="form-control" style="width: 80%;" disabled/>
                        </div>
                    </div>
                    <div class="mb-3 col-md-6">
                        <div class="form-group">
                            <label asp-for="LastName" class="text-theme font-weight-bold"></label>
                            <input value="@Model.LastName" class="form-control" style="width: 80%;" disabled/>
                        </div>
                    </div>
                    <div class="mb-3 col-md-6">
                        <div class="form-group">
                            <label asp-for="Gender" class="text-theme font-weight-bold"></label>
                            <input value="@Model.Gender" class="form-control" style="width: 80%;" disabled/>
                        </div>
                    </div>
                    <div class="mb-3 col-md-6">
                        <div class="form-group">
                            <label asp-for="Birthday" class="text-theme font-weight-bold"></label>
                            <input class="form-control" value="@Model.Birthday" style="width: 80%;" disabled/>
                        </div>
                    </div>
                    <div class="mb-3 col-md-6">
                        <div class="form-group">
                            <label asp-for="Email" class="text-theme font-weight-bold"></label>
                            <input value="@Model.Email" class="form-control" style="width: 80%;" disabled/>
                        </div>
                    </div>
                    <div class="mb-3 col-md-6">
                        <div class="form-group">
                            <label asp-for="Country" class="text-theme font-weight-bold"></label>
                            <input value="@Model.Country" class="form-control" style="width: 80%;" disabled/>
                        </div>
                    </div>
                    <div class="mb-3 col-md-6">
                        <div class="form-group">
                            <label asp-for="Username" class="text-theme font-weight-bold"></label>
                            <input value="@Model.Username" class="form-control" style="width: 80%;" disabled/>
                        </div>
                    </div>
                    <div class="mb-3 col-md-6">
                        <div class="form-group">
                            <label asp-for="PhoneNumber" class="text-theme font-weight-bold"></label>
                            <input value="@Model.PhoneNumber" class="form-control" style="width: 80%;" disabled/>
                        </div>
                    </div>
                </div>
            </div>
            <a asp-action="Index" class="btn btn-secondary ml-5" style="width: 10rem;">Back</a>
        </form>
    </div>
</div>

